<style>
  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .animate-scroll {
    animation: scroll 50s linear infinite;
    width: fit-content;
  }

  .animate-scroll:hover {
    animation-play-state: paused;
  }

  .company-logo-carousel img {
    height: 3rem !important;
    max-width: 8rem;
  }
</style>

